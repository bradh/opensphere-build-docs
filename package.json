{
  "name": "opensphere-build-docs",
  "version": "1.2.0",
  "description": "Generates API documentation for Closure projects.",
  "bin": {
    "os-docs": "./os-docs.js",
    "os-docs-gen-config": "./genconf.js"
  },
  "main": "genconf.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:changed": "if git diff --name-only HEAD | grep -q '\\.js$'; then npm run lint; fi",
    "lint": "eslint *.js",
    "package:update": "if git diff --name-only ORIG_HEAD HEAD | grep --quiet package.json; then echo 'UPDATE: package.json changed, consider running yarn in your workspace root'; fi",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "opensphere",
    "build",
    "closure",
    "compiler",
    "jsdoc",
    "api"
  ],
  "license": "Apache-2.0",
  "author": "Kevin Schmidt <kschmidt@caci.com>",
  "maintainers": [
    "Kevin Schmidt <kschmidt@caci.com>",
    "William Wall <wwall@caci.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ngageoint/opensphere-build-docs.git"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "\nPlease fix your commit message (consider using 'npm i -g commitizen'). Well-formatted commit messages allow us to automate our changelog and npm releases.\n\nExamples:\n\"fix(copy-view): Fixed an error when resolving paths for view directories\"\n\"feat(gcc): Added support for defines\"\n\nIf you have installed commitizen, try running 'git cz'."
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "deepmerge": "^1.1.1",
    "fs": "0.0.1-security",
    "ghooks": "^1.3.2",
    "jsdoc": "^3.4.2",
    "opensphere-build-closure-helper": "^1.0.0",
    "path": "^0.12.7",
    "validate-commit-msg": "^2.8.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.6.1",
    "eslint-config-google": "^0.6.0",
    "eslint-config-opensphere": "^1.0.0",
    "eslint-plugin-google-camelcase": "0.0.2",
    "eslint-plugin-opensphere": "2.0.0",
    "husky": "^1.3.1",
    "semantic-release": "^15.13.3",
    "validate-commit-msg": "^2.12.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "post-merge": "npm run package:update",
      "post-rewrite": "npm run package:update",
      "pre-commit": "npm run lint:changed"
    }
  }
}
